// Symbolic definition of item type.
enum ItemType
{
    NON_WORD,                   // non-word
    UNRELATED,                  // real word with unrelated prime
    RELATED,                    // real word with semantically related prime
}


// Item table record.
record TestItem
{
    int         id;             // item id
    ItemType    type;           // item type
    string      wordfn;         // stimulus word sound filename
    string      primefn;        // prime word sound filename
}


